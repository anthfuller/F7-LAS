{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/f7las/policy-schema.json",
  "title": "F7-LAS Policy Document",
  "type": "object",
  "required": [
    "policy_id",
    "policy_type",
    "description",
    "version",
    "target_layer",
    "default_decision",
    "rules"
  ],
  "properties": {
    "policy_id": {
      "type": "string",
      "description": "Unique identifier for this policy document"
    },
    "policy_type": {
      "type": "string",
      "enum": ["agent", "tool", "sandbox", "rag"],
      "description": "What this policy governs"
    },
    "description": {
      "type": "string",
      "description": "Human-readable summary of this policy"
    },
    "version": {
      "type": "string",
      "description": "Policy version or date tag (e.g., v1.0 or 2025-01-01)"
    },
    "target_layer": {
      "type": "string",
      "description": "F7-LAS layer this policy primarily maps to (e.g., L3-Agent-Planner)"
    },
    "owner_team": {
      "type": "string",
      "description": "Team responsible for maintaining this policy"
    },
    "last_reviewed": {
      "type": "string",
      "description": "Last review date in ISO-8601 format (YYYY-MM-DD)"
    },
    "default_decision": {
      "type": "string",
      "enum": ["allow", "deny", "log-only"],
      "description": "Baseline decision when no rule matches"
    },
    "notes": {
      "type": "string",
      "description": "Free-form notes or implementation guidance"
    },
    "rules": {
      "type": "array",
      "description": "Ordered set of policy rules",
      "items": {
        "type": "object",
        "required": ["id", "description", "effect"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Rule identifier"
          },
          "description": {
            "type": "string",
            "description": "What this rule enforces"
          },
          "effect": {
            "type": "string",
            "enum": ["allow", "deny", "log-only"],
            "description": "Decision if this rule matches"
          },
          "conditions": {
            "type": "object",
            "description": "Simple structured conditions",
            "properties": {
              "applies_to_agents": {
                "type": "array",
                "items": { "type": "string" }
              },
              "applies_to_tools": {
                "type": "array",
                "items": { "type": "string" }
              },
              "max_risk_tier": {
                "type": "string",
                "description": "Highest allowed risk tier for this rule (e.g., medium)"
              },
              "requires_hitl": {
                "type": "boolean",
                "description": "Whether human-in-the-loop is required"
              },
              "allowed_collections": {
                "type": "array",
                "items": { "type": "string" }
              },
              "denied_collections": {
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
